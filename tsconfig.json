{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@models/*": ["src/models/*"],
      "@store/*": ["src/store/*"],
      "@slices/*": ["src/store/slices/*"],
      "@api/*": ["src/api/*"],
      "@apiServices/*": ["src/api/services/*"],
            }
  }
}